{
  "name": "wazum/page-deletion-guard",
  "type": "typo3-cms-extension",
  "description": "Prevents deletion of pages with children in TYPO3 backend",
  "license": "GPL-3.0",
  "authors": [
    {
      "name": "Wolfgang Klinger",
      "email": "wolfgang@wazum.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "typo3/cms-core": "^12.4 || ^13.4",
    "typo3/cms-backend": "^12.4 || ^13.4"
  },
  "require-dev": {
    "typo3/testing-framework": "^8.0",
    "phpunit/phpunit": "^11.5",
    "squizlabs/php_codesniffer": "^3.13",
    "vimeo/psalm": "^6.13",
    "friendsofphp/php-cs-fixer": "^3.85",
    "slevomat/coding-standard": "^8.15"
  },
  "autoload": {
    "psr-4": {
      "Wazum\\PageDeletionGuard\\": "Classes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wazum\\PageDeletionGuard\\Tests\\": "Tests/"
    }
  },
  "extra": {
    "typo3/cms": {
      "extension-key": "page_deletion_guard"
    }
  },
  "config": {
    "allow-plugins": {
      "typo3/class-alias-loader": true,
      "typo3/cms-composer-installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "php-cs-fixer": [
      "./vendor/bin/php-cs-fixer fix --dry-run -v --diff --config=php-cs-fixer.config.php"
    ],
    "php-cs-fixer:fix": [
      "./vendor/bin/php-cs-fixer fix -v --config=php-cs-fixer.config.php"
    ],
    "psalm": [
      "./vendor/bin/psalm --config=psalm.xml"
    ],
    "lint": [
      "@psalm",
      "@php-cs-fixer"
    ],
    "lint:fix": [
      "@psalm",
      "@php-cs-fixer:fix"
    ],
    "test": [
      "./vendor/bin/phpunit -c phpunit.xml.dist"
    ]
  }
}
